@{
    ViewData["Title"] = "Home";
}

<style>
    .gt-hero {
        padding: 4rem 0 3rem 0;
        background: radial-gradient(circle at top left, #1b263b, #0a0b10);
        color: #f5f5f5;
    }

    .gt-hero-title {
        font-size: 3rem;
        font-weight: 700;
    }

    .gt-hero-highlight {
        color: #f39c12;
    }

    .gt-section-title {
        text-align: center;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: #f39c12;
        margin-bottom: 0.5rem;
    }

    .gt-section-subtitle {
        text-align: center;
        color: #cccccc;
        margin-bottom: 2rem;
    }

    .gt-feature-card {
        background-color: #11131a;
        border: 1px solid #222;
        color: #f5f5f5;
    }

        .gt-feature-card p {
            color: #cfcfcf;
        }

    .gt-heatmap-wrapper {
        width: 100%;
        border: 1px solid #333;
        background-color: #11131a;
        padding: 0.75rem;
    }

    .gt-heatmap {
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        grid-auto-rows: 1fr;
        gap: 2px;
        width: 100%;
        aspect-ratio: 1 / 1;
    }

    .gt-heat-cell {
        width: 100%;
        height: 100%;
        border-radius: 2px;
    }

    .level-1 {
        background-color: #1e272e;
    }

    .level-2 {
        background-color: #37464f;
    }

    .level-3 {
        background-color: #f39c12;
    }

    .level-4 {
        background-color: #e67e22;
    }

    .level-5 {
        background-color: #ff3838;
    }

    .gt-heatmap-caption {
        margin-top: 0.5rem;
        font-size: 0.85rem;
        color: #bbbbbb;
        text-align: center;
    }

    .gt-heatmap-legend {
        margin-top: 0.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.8rem;
        color: #bbbbbb;
    }

    .gt-legend-box {
        width: 16px;
        height: 10px;
        border-radius: 2px;
    }

    .gt-testimonial-card {
        background-color: #11131a;
        border: 1px solid #222;
        color: #f5f5f5;
    }

    .gt-avatar {
        width: 72px;
        height: 72px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #f39c12;
        margin-bottom: 0.75rem;
    }

    .gt-quote {
        font-size: 0.95rem;
        color: #d9d9d9;
    }

    .gt-name {
        font-weight: 600;
        color: #f39c12;
    }

    .gt-role {
        font-size: 0.85rem;
        color: #bbbbbb;
    }

    .gt-carousel-indicators [data-bs-target] {
        background-color: #f39c12;
    }
</style>

<section class="gt-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4">
                <h1 class="gt-hero-title">
                    Welcome to <span class="gt-hero-highlight">GrapheneTrace</span>
                </h1>
                <p class="lead mt-3">
                    A smart pressure monitoring platform that helps patients monitor posture,
                    clinicians track risk, and testers validate heatmaps and algorithms.
                </p>
                <div class="mt-4">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-2">
                        Login
                    </a>
                    <a asp-controller="Patient" asp-action="Dashboard" class="btn btn-outline-light btn-lg">
                        Patient Dashboard
                    </a>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card shadow-sm gt-feature-card">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-3">Live Pressure Insights</h5>
                        <p class="card-text">
                            Monitor real-time pressure maps, view historical trends, and capture notes
                            whenever discomfort appears.
                        </p>

                        <div class="gt-heatmap-wrapper">
                            <div class="gt-heatmap">
                                <!-- 8x8 demo grid -->
                                <!-- Row 1 -->
                                <div class="gt-heat-cell level-1"></div>
                                <div class="gt-heat-cell level-1"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-1"></div>
                                <div class="gt-heat-cell level-1"></div>
                                <!-- Row 2 -->
                                <div class="gt-heat-cell level-1"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-1"></div>
                                <!-- Row 3 -->
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-4"></div>
                                <div class="gt-heat-cell level-4"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <!-- Row 4 -->
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-4"></div>
                                <div class="gt-heat-cell level-5"></div>
                                <div class="gt-heat-cell level-5"></div>
                                <div class="gt-heat-cell level-4"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <!-- Row 5 -->
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-4"></div>
                                <div class="gt-heat-cell level-5"></div>
                                <div class="gt-heat-cell level-5"></div>
                                <div class="gt-heat-cell level-4"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <!-- Row 6 -->
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-4"></div>
                                <div class="gt-heat-cell level-4"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <!-- Row 7 -->
                                <div class="gt-heat-cell level-1"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-3"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-1"></div>
                                <!-- Row 8 -->
                                <div class="gt-heat-cell level-1"></div>
                                <div class="gt-heat-cell level-1"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-2"></div>
                                <div class="gt-heat-cell level-1"></div>
                                <div class="gt-heat-cell level-1"></div>
                            </div>

                            <div class="gt-heatmap-caption">
                                Example pressure heatmap (hotter colours show higher pressure)
                            </div>

                            <div class="gt-heatmap-legend">
                                <span>Low</span>
                                <span class="gt-legend-box level-1"></span>
                                <span class="gt-legend-box level-2"></span>
                                <span class="gt-legend-box level-3"></span>
                                <span class="gt-legend-box level-4"></span>
                                <span class="gt-legend-box level-5"></span>
                                <span>High</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="gt-section-title">Who is GrapheneTrace for?</div>
        <p class="gt-section-subtitle">
            A single platform to support patients, clinicians, and testers.
        </p>

        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card gt-feature-card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Patients</h5>
                        <p class="card-text">
                            See your own pressure maps, track sessions over time, and record comments
                            whenever you feel discomfort so your clinician can review them later.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card gt-feature-card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Clinicians</h5>
                        <p class="card-text">
                            Quickly identify high-risk areas, receive alerts when patients remain in the
                            same position too long, and use reports to support clinical decisions.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card gt-feature-card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Testers</h5>
                        <p class="card-text">
                            Sort heatmaps by thermal reactivity, adjust threshold ranges, and inspect
                            the methods used to generate charts for validation and research.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="pb-5">
    <div class="container">
        <div class="gt-section-title">Testimonials</div>
        <p class="gt-section-subtitle">
            Feedback from people who benefit from GrapheneTrace.
        </p>

        <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators gt-carousel-indicators">
                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="0"
                        class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
            </div>

