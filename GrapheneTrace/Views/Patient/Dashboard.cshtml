@using GrapheneTrace.Models
@{
    ViewData["Title"] = "Patient Dashboard";
    var sessions = ViewBag.Sessions as List<SensorSession>;
}

<h1 class="mb-4">Welcome, @ViewBag.PatientName</h1>

@if (ViewBag.Error != null)
{
    <div class="text-danger">@ViewBag.Error</div>
}
else
{
    <h3>Your recent pressure sessions</h3>

    @if (sessions == null || !sessions.Any())
    {
        <p>No sessions recorded yet.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Session ID</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Recording Area</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in sessions)
                {
                    <tr>
                        <td>@s.SessionID</td>
                        <td>@s.StartTime</td>
                        <td>@s.EndTime</td>
                        <td>@s.RecordingArea</td>
                        <td>
                            <a asp-controller="Patient"
                               asp-action="ViewSession"
                               asp-route-sessionId="@s.SessionID"
                               class="btn btn-sm btn-primary">
                                View session
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

<p class="mt-3">
    <a asp-controller="Account" asp-action="Logout" class="btn btn-secondary">
        Logout
    </a>
</p>
