<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GrapheneTrace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GrapheneTrace.styles.css" asp-append-version="true" />

    <style>
        /* Simple global theme for the app */
        body {
            background-color: #0a0b10;
            color: #f5f5f5;
        }

        .gt-navbar {
            background-color: #000000;
            border-bottom: 1px solid #222;
        }

        .gt-brand {
            font-weight: 700;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            color: #ffffff !important;
        }

        .gt-nav-link {
            color: #f5f5f5 !important;
            margin-left: 0.5rem;
        }

            .gt-nav-link:hover {
                color: #f39c12 !important; /* orange accent */
            }

        .gt-footer {
            border-top: 1px solid #222;
            background-color: #000;
            color: #888;
        }

        a {
            color: #f39c12;
        }

            a:hover {
                color: #ffd27f;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark gt-navbar">
            <div class="container">
                <!-- Brand on the left -->
                <a class="navbar-brand gt-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    GrapheneTrace
                </a>

                <!-- Toggler for mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links on the right -->
                <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link gt-nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link gt-nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link gt-nav-link" asp-area="" asp-controller="Patient" asp-action="Dashboard">
                                Patient Dashboard
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()   <!-- ✅ this is the only place RenderBody should be -->
        </main>
    </div>

    <footer class="border-top gt-footer text-muted mt-5">
        <div class="container py-3">
            &copy; @DateTime.Now.Year - GrapheneTrace
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
